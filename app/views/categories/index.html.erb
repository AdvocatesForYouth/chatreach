<% content_for :javascript do %>
<%= javascript_include_tag "quicksearch.js", :cache => true %>
<script type="text/javascript">
$(document).ready(function() {        
	$('table#tableList tbody tr').quicksearch({
	  position: 'before',
	  attached: 'table#tableList',
	  stripeRowClass: ['odd', 'even'],
	  labelText: 'Search the table',
	  inputClass: 'text'
	}); 
});
</script>
<% end %>
<div id="questionList">
<h1>Categories</h1>
<div class="directions">
  <p>Categories are available options under tags.  For instance, a tag could be pregnancy and a category would information.  Categories are shared across tags but each tag can only have one category.</p>
</div>
<%= render "menu"%>
<table id="tableList" class="tablesorter">
  <thead>
    <th>Brand Name</th>
	  <th>Actions</th>
  </thead>

<% @categories.each do |category| %>
  <tr>
    <td><%=link_to category.name, edit_category_path(category) %></td>
    <% if !current_user.brand_admins.blank? || current_user.admin? %>
      <td><%= link_to 'Edit', edit_category_path(category) %> | <%= link_to 'Destroy', category_path(category), :confirm => 'Are you sure?', :method => :delete %>
    </td>
    <% end %>
  </tr>
<% end %>
</table>

</div>