<div class="blue_container">
	<div class="innerBox span-15">
<h1>Invite a User</h1>
<div class="directions">
  <p>Invite a User to Maintain This Profile. <%= link_to "You can skip this >>", organizations_path %></p>
</div>

<fieldset>
	<legend>Details</legend>

<% form_for @user do |f| %>
  <%= f.error_messages %>
	<% fields_for :uprofile do |uprofile| -%>
	<p>
    <%= f.label :first_name %><br />
	<%= uprofile.text_field :first_name %>
	</p>
	<p>
    <%= f.label :last_name %><br />
	<%= uprofile.text_field :last_name %>	
	</p>
	<% end -%>
	<p>
    <%= f.label :email %><br />
	<%= f.text_field :email %>
	</p>
	<input type="hidden" name="user[password]" value="<%= @password %>">
	<input type="hidden" name="account" value="<%= @user.account.id %>">
	<%= f.submit 'Create', :class => "button clickable round-7" %>
<% end %>
</fieldset>
</div>
	  <%= render :partial => "help"%>
<div style="clear: both;"/></div>
</div>
