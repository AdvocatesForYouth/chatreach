<% content_for :javascript do %>
<%= javascript_include_tag "quicksearch.js", :cache => true %>
<script type="text/javascript">
$(document).ready(function() {        
	$('table#tableList tbody tr').quicksearch({
	  position: 'before',
	  attached: 'table#tableList',
	  stripeRowClass: ['odd', 'even'],
	  labelText: 'Search the table',
	  inputClass: 'text'
	}); 
});
</script>
<% end %>
<div id="questionList">
<h1>Tags</h1>
<div class="directions">
  <p>Tags are top level directory items with actions under them.  Tag names have to be unique.</p>
</div>
<%= render "menu"%>
<table id="tableList" class="tablesorter">
  <thead>
    <th>Tag Name</th>
	  <th>Actions</th>
  </thead>

<% @tags.each do |tag| %>
  <tr>
    <td><%=link_to tag.name, edit_tag_path(tag) %></td>
    <% if !current_user.brand_admins.blank? || current_user.admin? %>
      <td><%= link_to 'Edit', edit_tag_path(tag) %> | <%= link_to 'Destroy', tag_path(tag), :confirm => 'Are you sure?', :method => :delete %>
    </td>
    <% end %>
  </tr>
<% end %>
</table>

</div>