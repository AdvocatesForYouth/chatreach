page.replace_html "text#{@text_content.id}", ""
unless flash[:notice].nil?
  page.replace_html :flash, '<div id="success">' + flash[:notice] + '</div>'
end
unless flash[:failure].nil?
  page.replace_html :flash, '<div id="failure">' + flash[:failure] + '</div>'
end
unless flash[:error].nil?
  page.replace_html :flash, '<div id="error">' + flash[:error] + '</div>'
end
flash.discard