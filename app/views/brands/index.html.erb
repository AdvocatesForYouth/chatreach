<div id="questionList">
<h1>Brands</h1>
<div class="directions">
  <p>Brands are keywords.  Users text these keywords to start a session.  Brand names must be unique.</p>
</div>
<ul id="submenu" class="links border">
  <li><%= link_to "All Brands", brands_path%></li>
  <li><%= link_to "New Brand", new_brand_path%></li>
</ul>
<table id="tableList" class="tablesorter">
  <thead>
    <th>Brand Name</th>
    <th>Brand Administrators</th>
    <% if current_user.admin?%>    
	  <th>Actions</th>
	  <% end %>
  </thead>

<% @brands.each do |brand| %>
  <tr>
    <td><%= brand.name %></td>
    <td>
      <ul>
        <%= render :partial => "brand_admin", :collection => brand.brand_admins, :as => :brand_admin %>
      </ul>
    </td>
    <% if current_user.admin?%>
    <td><%= link_to 'Edit', edit_brand_path(brand) %>
    <%= link_to 'Destroy', brand_path(brand), :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

</div>