<p><%= f.label :brand_id, "Select a Brand" %><br />
	<select name="help[brand_id]">
		<option value="0"<%if @help.brand_id == "0"%> selected=""<%end%>>All Brands</option>
		<% Brand.all.each do |brand| %>
			<option value="<%= brand.id %>"<%if @help.brand_id == brand.id%> selected=""<%end%>><%= brand.name %></option>
		<% end %>
	</select>
</p>
<p>
  <%= f.label :title %><br />
  <%= f.text_field :title %>
</p>
<p>
  <%= f.label :content %><br />
  <%= f.text_area :content %>
</p>
<p>
  <%= f.check_box :feature %>
  <%= f.label :feature, "Featured?" %><br />
  <%= f.check_box :published %>
  <%= f.label :published, "Published?" %>

</p>
